<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.InventoryApp" parent="Theme.Material3.DayNight.NoActionBar">
        </style>

    <style name="Theme.InventoryApp" parent="Base.Theme.InventoryApp" />

    <style name="Theme.InventoryApp.Login" parent="Base.Theme.InventoryApp">
        <item name="android:windowBackground">@color/darkGreyBackground</item>
    </style>

    <style name="WhiteBorderInput" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="boxStrokeErrorColor">@color/errorRed</item>
        
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>

        <item name="android:textColorHint">@color/white</item>
        <item name="hintTextColor">@color/white</item>
        
        <item name="endIconTint">@color/white</item>
        <item name="errorIconTint">@color/errorRed</item>
        
        <item name="android:editTextColor">@color/white</item>
    </style>

    <style name="Widget.App.TextInputLayout.White" parent="WhiteBorderInput" />
    <style name="App.TextInputLayout" parent="WhiteBorderInput" />

</resources>