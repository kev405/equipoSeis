<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeInventoryFragment">

    <fragment
        android:id="@+id/authenticationFragment"
        android:name="com.univalle.inventoryapp.view.fragments.AuthenticationFragment"
        android:label="AuthenticationFragment"
        tools:layout="@layout/fragment_authentication" >
        <action
            android:id="@+id/action_authenticationFragment_to_homeInventoryFragment"
            app:destination="@id/homeInventoryFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeInventoryFragment"
        android:name="com.univalle.inventoryapp.view.fragments.HomeInventoryFragment"
        android:label="fragment_home_inventory"
        tools:layout="@layout/fragment_home_inventory" >
        <action
            android:id="@+id/action_homeInventoryFragment_to_addItemFragment"
            app:destination="@id/addItemFragment" />
        <action
            android:id="@+id/action_homeInventoryFragment_to_itemDetailsFragment"
            app:destination="@id/itemDetailsFragment" />
        <action
            android:id="@+id/action_homeInventoryFragment_to_authenticationFragment"
            app:destination="@id/authenticationFragment" />
    </fragment>
    <fragment
        android:id="@+id/addItemFragment"
        android:name="com.univalle.inventoryapp.view.fragments.AddItemFragment"
        android:label="fragment_add_item"
        tools:layout="@layout/fragment_add_item" >
        <action
            android:id="@+id/action_addItemFragment_to_homeInventoryFragment"
            app:destination="@id/homeInventoryFragment" />
    </fragment>
    <fragment
        android:id="@+id/itemDetailsFragment"
        android:name="com.univalle.inventoryapp.view.fragments.ItemDetailsFragment"
        android:label="fragment_item_details"
        tools:layout="@layout/fragment_item_details" >

        <action
            android:id="@+id/action_itemDetailsFragment_to_itemEditFragment"
            app:destination="@id/itemEditFragment" >
        </action>
    </fragment>
    <fragment
        android:id="@+id/itemEditFragment"
        android:name="com.univalle.inventoryapp.view.fragments.ItemEditFragment"
        android:label="fragment_item_edit"
        tools:layout="@layout/fragment_item_edit" >
        <action
            android:id="@+id/action_itemEditFragment_to_homeInventoryFragment"
            app:destination="@id/homeInventoryFragment" />
    </fragment>
</navigation>